@model PortfolioMVC5v3.Models.Achievement

@{
    ViewBag.Title = "Karta osiągnięcia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section AdditionalCss
{
}

@Html.HiddenFor(m => m.AchievementId)

<div class="row h-100">
    <div class="col-12">
        <div class="card" style="height: 90%">
            <div class="card-body d-flex flex-column">
                <h2 class="card-title">Karta osiągnięcia</h2>

                <div class="row mt-3">
                    <div class="col-12 mb-2">
                        <h5>Opcje główne:</h5>
                    </div>

                    <div class="col-6 pl-4">
                        <div class="form-group">
                            <label for="Title">Tytuł</label>
                            <input type="text" class="k-textbox w-100" name="Title" id="Title" placeholder="Tytuł" value="@Model.Title"  />
                            <small id="TitleHint" class="form-text text-muted">Pełna nazwa osiągnięcia</small>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="myDate">Data zdobycia</label>
                            <input id="myDate" value="@Model.Date.ToShortDateString()" style="width: 100%;" />
                            <small id="myDateHint" class="form-text text-muted">Data kiedy zdobyto opisywanie osiągnięcie</small>
                        </div>
                    </div>

                    <div class="col-12 pl-4">
                        <div class="form-group">
                            <label for="Description">Opis osiągnięcia</label>
                            <input id="Description" value="@Model.Description" style="width: 100%;" class="k-textbox" />
                            <small id="DescriptionHint" class="form-text text-muted">Pełen opis osiągnięcie</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12 mb-2">
                        <h5>Opcje dodatkowe:</h5>
                    </div>
                    <div class="col-12 pl-4">
                        <table>
                            <tr>
                                <th class="py-2"><input id="ShowInCv" /></th>
                                <th class="py-2"><label for="ShowInCv" class="ml-3 pt-2">Pokazuj w CV</label></th>
                            </tr>
                        </table>
                    </div>

                </div>

                <div class="row mt-auto">
                    <div class="col">
                        <button type="button" name="SaveBtn" id="SaveBtn" class="btn btn-success float-right">
                            <i class="fas fa-save mr-2"></i> Zapisz zmiany
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        var showInCv = @Html.Raw(Json.Encode(@Model.ShowInCv));
    </script>

    <script src="~/Scripts/admin/Achievements/Card.js"></script>
}
