@model PortfolioMVC5v3.Models.AboutMe

@{
    ViewBag.Title = "Edycja strony 'O mnie'";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.HiddenFor(m => m.AboutMeId)

<div class="row h-100">
    <div class="col-12">
        <div class="card" style="height: 90%">
            <div class="card-body d-flex flex-column">
                <h2 class="card-title">Edycja strony "O mnie"</h2>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="Title">Nazwa</label>
                            <input name="Title" id="Title" type="text" class="k-textbox w-100" placeholder="Tytuł" value="@Model.Title" />
                            <small id="TitleHint" class="form-text text-muted">Tytuł wyświetlany na stronie "O mnie"</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="ImageLink">Link do zdjęcia</label>
                            <input id="ImageLink" type="text" value="@Model.ImageLink" class="k-textbox w-100" />
                            <small id="ImageLinkHint" class="form-text text-muted">Bezpośredni link do zdjęcia dodawanego do portfolio</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="Technologies">Technologie</label>
                            <input id="Technologies" class="k-textbox w-100" />
                            <small id="TechnologiesHint" class="form-text text-muted">Technologie do wyświetlenia na stronie "O mnie"</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="Text">Opis</label>
                            <textarea id="Text" name="Text" placeholder="Opis" class="k-textbox w-100 p-2" rows="6">@Model.Text</textarea>
                            <small id="TextHint" class="form-text text-muted">Opis wyświetlany na stronie "O mnie"</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-auto">
                    <div class="col">
                        <button type="button" name="SaveBtn" id="SaveBtn" class="btn btn-success float-right">
                            <i class="fas fa-save mr-2"></i> Zapisz zmiany
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/admin/AboutMeManagement/Management.js"></script>
}
