@model List<PortfolioMVC5v3.Models.Icon>

@{
    ViewBag.Title = "Zarządzanie ikonami";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row h-100">
    <div class="col-12">
        <div class="card" style="height: 90%">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <h2 class="card-title">Ikony</h2>
                    </div>
                    <div class="col-6">
                        <button id="AddIconBtn" name="AddIconBtn" class="btn k-primary mr-2 float-right"><i class="far fa-plus-square mr-2"></i>Dodaj ikone</button>
                    </div>
                </div>

                <div class="row h-100">
                    <div class="col">
                        <div id="grid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        var model = @Html.Raw(Json.Encode(@Model));
    </script>

    <script src="~/Scripts/admin/Icons/Management.js"></script>
}
