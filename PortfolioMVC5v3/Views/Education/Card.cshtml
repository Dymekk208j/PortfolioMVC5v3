@model PortfolioMVC5v3.Models.Education

@{
    ViewBag.Title = "Karta histori wykształcenia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section AdditionalCss
{
}

@Html.HiddenFor(m => m.EducationId)

<div class="row h-100">
    <div class="col-12">
        <div class="card" style="height: 90%">
            <div class="card-body d-flex flex-column">
                <h2 class="card-title">Karta histori wykształcenia</h2>

                <div class="row mt-3">
                    <div class="col-12 mb-2">
                        <h5>Opcje główne:</h5>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <label for="SchoolName">Nazwa szkoły</label>
                            <input id="SchoolName" name="SchoolName" type="text" class="k-textbox w-100" placeholder="Nazwa szkoły" value="@Model.SchoolName" />
                            <small id="SchoolNameHint" class="form-text text-muted">Pełna nazwa szkoły</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="Department">Wydział</label>
                            <input id="Department" name="Department" type="text" class="k-textbox w-100" placeholder="Wydział" value="@Model.Department" />
                            <small id="DepartmentHint" class="form-text text-muted">Pełna nazwa wydziału/specjalizacji szkoły</small>
                        </div>
                    </div>
                    
                    <div class="col-6 ">
                        <div class="form-group">
                            <label for="Specialization">Specjalizacja</label>
                            <input id="Specialization" name="Specialization" type="text" class="k-textbox w-100" placeholder="Specjalizacja" value="@Model.Specialization" />
                            <small id="SpecializationHint" class="form-text text-muted">Pełna nazwa kończone specjalizacji</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-6 ">
                        <div class="form-group">
                            <label for="StartDate">Data od</label>
                            <input id="StartDate" name="CompanyName" class="w-100" value="@Model.StartDate" />
                            <small id="StartDateHint" class="form-text text-muted">Data rozpoczęcia nauki</small>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="EndDate">Data do</label>
                            <input id="EndDate" name="EndDate" class="w-100" value="@Model.EndDate" />
                            <small id="EndDateHint" class="form-text text-muted">Data zakończenia nauki</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12 mb-2">
                        <h5>Opcje dodatkowe:</h5>
                    </div>
                    <div class="col-12 pl-4">
                        <table>
                            <tr>
                                <th class="py-2"><input id="ShowInCv" /></th>
                                <th class="py-2"><label for="ShowInCv" class="ml-3 pt-2">Pokazuj w CV</label></th>
                            </tr>
                            <tr>
                                <th class="py-2"><input id="CurrentPlaceOfEducation" /></th>
                                <th class="py-2"><label for="CurrentPlaceOfEducation" class="ml-3 pt-2">Aktualne miejsce nauki</label></th>
                            </tr>
                        </table>
                    </div>

                </div>

                <div class="row mt-auto">
                    <div class="col">
                        <button type="button" name="SaveBtn" id="SaveBtn" class="btn btn-success float-right">
                            <i class="fas fa-save mr-2"></i> Zapisz zmiany
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        var showInCv = @Html.Raw(Json.Encode(@Model.ShowInCv));
        var currentPlaceOfEducation = @Html.Raw(Json.Encode(@Model.CurrentPlaceOfEducation));
    </script>

    <script src="~/Scripts/admin/Education/Card.js"></script>
}
