@model PortfolioMVC5v3.Models.MainPage

@{
    ViewBag.Title = "Edycja strony głównej";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.HiddenFor(m => m.Id)

<div class="row h-100">
    <div class="col-12">
        <div class="card" style="height: 90%">
            <div class="card-body d-flex flex-column">
                <h2 class="card-title">Edycja strony głównej</h2>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="Title">Tytuł</label>
                            <input name="Title" id="Title" type="text" class="k-textbox w-100" placeholder="Tytuł" value="@Model.Title" />
                            <small id="TitleHint" class="form-text text-muted">Tytuł wyświetlany na stronie "O mnie"</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="ImageLink">Link do zdjęcia</label>
                            <input id="ImageLink" type="text" value="@Model.ImageLink" class="k-textbox w-100" />
                            <small id="ImageLinkHint" class="form-text text-muted">Bezpośredni link do zdjęcia dodawanego do portfolio</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="Description">Opis</label>
                            <textarea id="Description" name="Description" placeholder="Opis" class="k-textbox w-100 p-2" rows="6">@Model.Description</textarea>
                            <small id="DescriptionHint" class="form-text text-muted">Opis wyświetlany na stronie "O mnie"</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-auto">
                    <div class="col">
                        <button type="button" name="SaveBtn" id="SaveBtn" class="btn btn-success float-right">
                            <i class="fas fa-save mr-2"></i> Zapisz zmiany
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/admin/HomePage/Management.js"></script>
}
