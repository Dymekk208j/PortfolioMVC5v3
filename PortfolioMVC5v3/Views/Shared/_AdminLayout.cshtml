<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Panel administracyjny">
    <meta name="author" content="Damian Dziura">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.ico">
    <title>Damian Dziura portfolio - Panel administracyjny</title>

    @Styles.Render("~/Content/adminCss")
    <!-- Kendo UI combined JavaScript -->
    @RenderSection("AdditionalCss", false)
    <style>
        html, body {
            height: 100%;
        }

        .btn-primary {
            color: #fff;
            background-color: #27a9e3;
            border-color: #27a2d9;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #2190c2;
                border-color: #2190c2;
            }

            .btn-primary:focus, .btn-primary.focus {
                -webkit-box-shadow: 0 0 0 0.2rem #27a2d9;
                -webkit-box-shadow: 0 0 0 0.2rem rgba(39, 162, 217, 0.5);
                box-shadow: 0 0 0 0.2rem #27a2d9;
                box-shadow: 0 0 0 0.2rem rgba(39, 162, 217, 0.5);
            }

            .btn-primary.disabled, .btn-primary:disabled {
                color: #fff;
                background-color: #27a9e3;
                border-color: #27a2d9;
            }

            .btn-primary:not(:disabled):not(.disabled):active, .btn-primary:not(:disabled):not(.disabled).active,
            .show > .btn-primary.dropdown-toggle {
                color: #fff;
                background-color: #27a9e3;
                border-color: #27a2d9;
            }

                .btn-primary:not(:disabled):not(.disabled):active:focus, .btn-primary:not(:disabled):not(.disabled).active:focus,
                .show > .btn-primary.dropdown-toggle:focus {
                    -webkit-box-shadow: 0 0 0 0.2rem #27a2d9;
                    -webkit-box-shadow: 0 0 0 0.2rem rgba(39, 162, 217, 0.5);
                    box-shadow: 0 0 0 0.2rem #27a2d9;
                    box-shadow: 0 0 0 0.2rem rgba(39, 162, 217, 0.5);
                }
    </style>
</head>
<body>
    <div id="main-wrapper" style="height: 100%;">
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header" data-logobg="skin5">
                    <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)"><i class="ti-menu"></i></a>

                    <a class="navbar-brand" href="@Url.Action("Dashboard", "AdministratorPanel")">
                        <b class="logo-icon p-l-10">
                            <img src="~/Assets/img/logo.png" alt="homepage" class="light-logo" />
                        </b>
                    </a>
                </div>
            </nav>
        </header>


        <aside class="left-sidebar" data-sidebarbg="skin5">
            <div class="scroll-sidebar">
                <nav class="sidebar-nav">
                    <ul id="sidebarnav" class="p-t-30">
                        @Html.Partial("_NavigateAdministratorPanelPartialView")
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="page-wrapper h-100">
            <div class="container-fluid h-100">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/adminLayout")
    <script type="text/javascript">
        kendo.culture("pl-PL");
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>