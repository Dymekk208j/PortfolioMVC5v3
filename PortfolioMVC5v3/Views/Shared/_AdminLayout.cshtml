<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Panel administracyjny">
    <meta name="author" content="Damian Dziura">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.ico">
    <title>Damian Dziura portfolio - Panel administracyjny</title>
    <link href="~/Content/admin/style.min.css" rel="stylesheet">
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/regular.css" rel="stylesheet" />
    <link href="~/Content/solid.css" rel="stylesheet" />
    <link href="~/Content/brands.css" rel="stylesheet" />

    <link href="~/Content/admin/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/admin/kendo.moonlight.mobile.min.css" rel="stylesheet" />
    <link href="~/Content/admin/kendo.moonlight.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>



    <!-- Kendo UI combined JavaScript -->
    @RenderSection("AdditionalCss", false)
    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body>
    <div id="main-wrapper" style="height: 100%;">
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header" data-logobg="skin5">
                    <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)"><i class="ti-menu"></i></a>

                    <a class="navbar-brand" href="@Url.Action("Dashboard", "AdministratorPanel")">
                        <b class="logo-icon p-l-10">
                            <img src="~/Assets/img/logo.png" alt="homepage" class="light-logo" />
                        </b>
                    </a>
                </div>
            </nav>
        </header>


        <aside class="left-sidebar" data-sidebarbg="skin5">
            <div class="scroll-sidebar">
                <nav class="sidebar-nav">
                    <ul id="sidebarnav" class="p-t-30">
                        @Html.Partial("_NavigateAdministratorPanelPartialView")
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="page-wrapper h-100">
            <div class="container-fluid h-100">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/waves.js"></script>
    <script src="~/Scripts/sidebarmenu.js"></script>

    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/Kendo/kendo.all.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.culture.pl.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.messages.pl-PL.min.js"></script>
    <script type="text/javascript">
        //set current to the "en-GB" culture script
        kendo.culture("pl-PL");
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>