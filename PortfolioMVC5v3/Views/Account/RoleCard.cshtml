@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Karta roli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section AdditionalCss
{
}

@Html.HiddenFor(m => m.Id)

<div class="row h-100">
    <div class="col-12">
        <div class="card" style="height: 90%">
            <div class="card-body d-flex flex-column">
                <h2 class="card-title">Karta roli</h2>

                <div class="row mt-3">
                    <div class="col-12 mb-2">
                        <h5>Opcje główne:</h5>
                    </div>

                    <div class="col-6 pl-4">
                        <div class="form-group">
                            <label for="Name">Nazwa</label>
                            <input type="text" class="k-textbox w-100" name="Name" id="Name" placeholder="Nazwa" value="@Model.Name" />
                            <small id="NameHint" class="form-text text-muted">Pełna nazwa roli</small>
                        </div>
                    </div>
                    </div>

       
                <div class="row mt-auto">
                    <div class="col">
                        <button type="button" name="SaveBtn" id="SaveBtn" class="btn btn-success float-right">
                            <i class="fas fa-save mr-2"></i> Zapisz zmiany
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/admin/Account/RoleCard.js"></script>
}
